{
  "name": "persistly",
  "version": "0.2.0",
  "description": "Document based persistency layer on top of Azure Cosmos DB. ",
  "author": "PayFunc",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/payfunc/persistly"
  },
  "bugs": {
    "url": "https://github.com/payfunc/persistly/issues"
  },
  "homepage": "https://payfunc.com/open-source/persistly",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "git": {
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "testEnvironment": "node",
    "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "scripts": {
    "dev": "watch 'npm run build' .",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "fix": "eslint '**/*.{js,ts,tsx}' --fix",
    "build": "tsc -p .",
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "watch jest",
    "prepare": "npm run build",
    "clean": "rm -rf dist node_modules coverage"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "dependencies": {
    "authly": "payfunc/authly#update-node",
    "mongodb": "^3.5.8",
    "mongodb-memory-server": "^6.6.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/mongodb": "^3.5.20",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.4.5",
    "eslint": "^7.32.0",
    "eslint-config-standardize": "^0.9.1",
    "eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20211221",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27",
    "prettierx": "github:utily/prettierx#utily-20211221",
    "ts-jest": "^27.1.2",
    "typescript": "^4.3.4",
    "watch": "^1.0.2"
  }
}
